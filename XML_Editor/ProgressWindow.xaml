<Window x:Class="XML_Editor.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XML_Editor"
        mc:Ignorable="d"
        Title="Progress" Height="100" Width="300" ResizeMode="NoResize">
    <Grid>
        <ProgressBar Name="progressBar" Width="250" Height="20" Margin="20" />
        <TextBlock x:Name="statusText" HorizontalAlignment="Center" VerticalAlignment="Top" Width="290" Height="27"/>
    </Grid>
</Window>

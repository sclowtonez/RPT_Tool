<Window x:Class="XML_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XML_Editor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Your existing UI elements go here -->

        <!-- Button to trigger the Open File Dialog -->

        <!-- Button to trigger the Open File Dialog -->
        <Button Content="Open XML File" Click="OpenXmlFile_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,25,0,0"/>

        <!-- Button to extract and save type content -->
        <Button Content="Extract Event Classnames" Click="ExtractAndSaveTypeContent_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="96,25,0,0"/>

        <!-- RichTextBox for syntax highlighting -->
        <RichTextBox x:Name="xmlContentRichTextBox" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="10,50,10,10"/>
    </Grid>
</Window>
